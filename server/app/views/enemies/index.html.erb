<p id="notice"><%= notice %></p>

<h1>Enemies</h1>

<table>
  <thead>
    <tr>
      <th>Personality</th>
      <th>Power</th>
      <th>Speed</th>
      <th>Hp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enemies.each do |enemy| %>
      <tr>
        <td><%= EnemyPersonalityModule::PERSONALITY_KIND.invert[enemy.personality] %></td>
        <td><%= enemy.power %></td>
        <td><%= enemy.speed %></td>
        <td><%= enemy.hp %></td>
        <td><%= link_to 'Show', enemy %></td>
        <td><%= link_to 'Edit', edit_enemy_path(enemy) %></td>
        <td><%= link_to 'Destroy', enemy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

